    "@graphql-codegen/typescript-resolvers": "2.3.0",
    "copyfiles": "2.4.1",
    "lerna": "4.0.0",
    "prettier": "2.4.1",
    "rimraf": "3.0.2",
    "typescript": "4.4.3"
  }
